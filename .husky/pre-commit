#!/bin/sh

# Game development pre-commit validation (target <30s total)
echo "🎮 Running game development pre-commit checks..."

# Stage 1: Code quality checks (target <20s)
echo "📋 Running lint-staged..."
npx lint-staged

echo "🔍 Type checking..."
npm run typecheck --silent

# Stage 2: Fast game tests (target <10s)
echo "🧪 Fast game tests..."
npm run test:unit:pre-commit --silent

echo "✅ Game pre-commit validation complete!"
