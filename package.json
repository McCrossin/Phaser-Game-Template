{
    "name": "new-eden-project",
    "version": "0.1.0",
    "description": "New Eden Project - 2D automation-strategy game with probe consciousness gameplay",
    "main": "dist/main.js",
    "type": "module",
    "scripts": {
        "dev": "vite",
        "build": "tsc && vite build",
        "build:docker": "vite build",
        "preview": "vite preview",
        "test": "vitest",
        "test:run": "vitest run",
        "test:ui": "vitest --ui",
        "test:coverage": "vitest --coverage",
        "test:e2e": "playwright test",
        "lint": "eslint src --ext .ts,.tsx",
        "lint:fix": "eslint src --ext .ts,.tsx --fix",
        "format": "prettier --write \"src/**/*.{ts,tsx,json,css}\"",
        "format:check": "prettier --check \"src/**/*.{ts,tsx,json,css}\"",
        "typecheck": "tsc --noEmit",
        "docs": "typedoc src/main.ts",
        "prepare": "husky",
        "validate": "npm run typecheck && npm run lint && npm run test:run",
        "test:performance": "playwright test --project=performance",
        "build:info": "node scripts/build-info.js",
        "deploy:staging": "node scripts/deploy.js --environment=staging",
        "deploy:production": "node scripts/deploy.js --environment=production",
        "rollback": "node scripts/rollback.js",
        "performance:check": "node scripts/performance-check.js"
    },
    "keywords": [
        "game",
        "phaser3",
        "typescript",
        "automation",
        "strategy",
        "space",
        "education"
    ],
    "author": "New Eden Project Team",
    "license": "MIT",
    "devDependencies": {
        "@playwright/test": "^1.54.1",
        "@types/node": "^24.0.14",
        "@typescript-eslint/eslint-plugin": "^8.0.0",
        "@typescript-eslint/parser": "^8.0.0",
        "@vitest/coverage-v8": "^3.2.4",
        "@vitest/ui": "^3.2.4",
        "audiosprite": "^0.7.2",
        "better-npm-audit": "^3.11.0",
        "eslint": "^9.0.0",
        "eslint-config-prettier": "^10.1.5",
        "eslint-plugin-prettier": "^5.1.0",
        "eslint-plugin-security": "^3.0.1",
        "husky": "^9.0.0",
        "jsdom": "^26.1.0",
        "lint-staged": "^15.2.0",
        "maxrects-packer": "^2.7.3",
        "playwright": "^1.45.0",
        "prettier": "^3.0.0",
        "sharp": "^0.34.3",
        "typedoc": "^0.28.7",
        "typescript": "^5.6.0",
        "typescript-eslint": "^8.0.0",
        "vite": "^7.0.5",
        "vitest": "^3.2.4"
    },
    "dependencies": {
        "lz-string": "^1.5.0",
        "phaser": "^3.88.2"
    },
    "lint-staged": {
        "*.{ts,tsx}": [
            "eslint --fix",
            "prettier --write"
        ],
        "*.{json,css,md}": [
            "prettier --write"
        ]
    }
}
