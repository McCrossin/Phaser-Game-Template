{
    "healthScores": {
        "excellent": 90,
        "good": 75,
        "warning": 50,
        "critical": 25
    },
    "performanceBaselines": {
        "ci": {
            "minFPS": 2,
            "avgFPS": 10,
            "buildTime": 600000,
            "memoryLimit": 512
        },
        "local": {
            "minFPS": 30,
            "avgFPS": 55,
            "buildTime": 30000,
            "memoryLimit": 256
        },
        "production": {
            "minFPS": 55,
            "avgFPS": 60,
            "loadTime": 3000,
            "memoryLimit": 128
        }
    },
    "technicalDebtLimits": {
        "todoComments": 10,
        "temporaryFixes": 5,
        "deprecatedCode": 0,
        "complexityThreshold": 10
    },
    "monitoring": {
        "schedule": {
            "weekly": "0 6 * * 0",
            "retention": {
                "reports": 30,
                "baselines": 90
            }
        },
        "alerts": {
            "healthScoreThreshold": 50,
            "criticalDebtThreshold": 5,
            "performanceRegressionThreshold": 0.2
        },
        "excludePaths": [
            "node_modules",
            ".git",
            "dist",
            "build",
            "coverage",
            ".next",
            ".nuxt",
            "reports",
            "playwright-report"
        ]
    },
    "integrations": {
        "github": {
            "workflowFile": ".github/workflows/health-monitoring.yml",
            "artifactRetention": 30
        },
        "notifications": {
            "onFailure": true,
            "onImprovement": false,
            "channels": ["github-actions"]
        }
    }
}
